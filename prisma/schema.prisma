generator nestjsDto {
  provider                        = "prisma-generator-nestjs-dto"
  output                          = "../src/generated"
  prismaClientImportPath          = ""
  outputToNestJsResourceStructure = "true"
  flatResourceStructure           = "false"
  exportRelationModifierClasses   = "true"
  reExport                        = "false"
  generateFileTypes               = "all"
  createDtoPrefix                 = "Create"
  updateDtoPrefix                 = "Update"
  dtoSuffix                       = "Dto"
  entityPrefix                    = ""
  entitySuffix                    = ""
  classValidation                 = "true"
  fileNamingStyle                 = "camel"
  noDependencies                  = "false"
  outputType                      = "class"
  definiteAssignmentAssertion     = "false"
  requiredResponseApiProperty     = "true"
  prettier                        = "true"
  wrapRelationsAsType             = "true"
  showDefaultValues               = "false"
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  /// @DtoReadOnly
  id String @id @default(uuid())

  /// @DtoReadOnly
  createdAt DateTime @default(now())

  /// @DtoReadOnly
  updatedAt DateTime @updatedAt

  /// @String
  /// @minimum 3
  /// @minLength 3
  username String @unique

  /// @String
  email String @unique

  /// @String
  /// @minimum 5
  /// @minLength 5
  password String

  sessions              Session[]
  createdWorkspaces     Workspace[]
  createdBoards         Board[]
  workspacesMemberships WorkspaceMember[]
  boardMemberships      BoardMember[]
  notificationRecipient Notification[]    @relation(name: "recipient")
  notificationSender    Notification[]    @relation(name: "sender")
}

model Session {
  /// @DtoReadOnly
  id String @id @default(uuid())

  /// @DtoReadOnly
  createdAt DateTime @default(now())

  /// @DtoReadOnly
  updatedAt DateTime @updatedAt

  /// @String
  accessToken  String @unique
  /// @String
  refreshToken String @unique

  user   User?   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String?
}

model Workspace {
  /// @DtoReadOnly
  id String @id @default(uuid())

  /// @DtoReadOnly
  createdAt DateTime @default(now())

  /// @DtoReadOnly
  updatedAt DateTime @updatedAt

  /// @String
  /// @minimum 3
  /// @minLength 3
  title String

  /// @DtoCreateHidden
  /// @String
  visibility WorkspaceVisibility

  createBy   User   @relation(fields: [createById], references: [id], onDelete: Cascade)
  createById String

  members       WorkspaceMember[]
  notifications Notification[]
  boards        Board[]
}

model WorkspaceMember {
  /// @DtoReadOnly
  id String @id @default(uuid())

  /// @DtoReadOnly
  createdAt DateTime @default(now())

  /// @DtoReadOnly
  updatedAt DateTime @updatedAt

  /// @String
  role WorkspaceRoles

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  workspace   Workspace @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String

  @@unique([userId, workspaceId])
}

model Notification {
  /// @DtoReadOnly
  id String @id @default(uuid())

  /// @DtoReadOnly
  createdAt DateTime @default(now())

  /// @DtoReadOnly
  updatedAt DateTime @updatedAt

  /// @DtoReadOnly
  type NotificationType

  /// @DtoRelationCanConnectOnCreate
  workspace   Workspace? @relation(fields: [workspaceId], references: [id])
  workspaceId String?

  /// @DtoRelationCanConnectOnCreate
  recipient   User   @relation(name: "recipient", fields: [recipientId], references: [id])
  recipientId String

  /// @DtoRelationCanConnectOnCreate
  sender   User?   @relation(name: "sender", fields: [senderId], references: [id])
  senderId String?

  @@unique([workspaceId, recipientId])
}

model Board {
  /// @DtoReadOnly
  id String @id @default(uuid())

  /// @DtoReadOnly
  createdAt DateTime @default(now())

  /// @DtoReadOnly
  updatedAt DateTime @updatedAt

  /// @String
  visibility BoardVisibility

  /// @String
  title String

  createBy   User   @relation(fields: [createById], references: [id], onDelete: Cascade)
  createById String

  workspace   Workspace? @relation(fields: [workspaceId], references: [id], onDelete: Cascade)
  workspaceId String?

  boardMembers BoardMember[]
  boardColumns BoardColumn[]
}

model BoardMember {
  /// @DtoReadOnly
  id String @id @default(uuid())

  /// @DtoReadOnly
  createdAt DateTime @default(now())

  /// @DtoReadOnly
  updatedAt DateTime @updatedAt

  /// @String
  role BoardRoles

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId String

  tasks Task[]

  @@unique([userId, boardId])
}

model BoardColumn {
  /// @DtoReadOnly
  id String @id @default(uuid())

  /// @DtoReadOnly
  createdAt DateTime @default(now())

  /// @DtoReadOnly
  updatedAt DateTime @updatedAt

  title String

  board   Board  @relation(fields: [boardId], references: [id], onDelete: Cascade)
  boardId String

  tasks Task[]
}

model Task {
  /// @DtoReadOnly
  id String @id @default(uuid())

  /// @DtoReadOnly
  createdAt DateTime @default(now())

  /// @DtoReadOnly
  updatedAt DateTime @updatedAt

  title       String
  description String?

  column        BoardColumn @relation(fields: [boardColumnId], references: [id], onDelete: Cascade)
  boardColumnId String

  participants BoardMember[]
}

enum BoardRoles {
  ADMIN
  PARTICIPANT
  VIEWER
}

enum WorkspaceRoles {
  ADMIN
  PARTICIPANT
  VIEWER
}

enum WorkspaceVisibility {
  PRIVATE
  PUBLIC
}

enum BoardVisibility {
  PRIVATE
  WORKSPACE
  PUBLIC
}

enum NotificationType {
  WORKSPACE_INVITATION
}
